<%
  if @event.temporary
    fee_partial_url = case @event.appointment_id
                        when 1
                          'offshore_disclaimer'
                        when 2
                          'onshore_disclaimer'
                        when 3
                          'returning_disclaimer'
                      end
%>
  $('#step-4-content').html("<%= escape_javascript(render partial: fee_partial_url, locals: {event_id: @event.id} ) %>");
<% else %>
  location.href = 'event/<%= @event.id%>'
<% end %>
