<div id="step-2" class="wizard-step-container">
  <form id="form-2">
    <div class="row mb-3">
    <div class="col-md-6">
      <div class="form-group">
        <label for="clientEmail">Email Address</label>
        <input type="email" class="form-control" id="clientEmail" name="clientEmail" placeholder="Please enter your email address here">
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="clientName">Full Name</label>
        <input type="text" class="form-control" id="clientName" name="clientName" placeholder="Please enter your full name here">
      </div>
    </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-6">
        <div class="form-group">
          <label for="clientPhone">Phone Number</label>
          <input type="text" class="form-control" id="clientPhone" name="clientPhone" placeholder="Please enter your phone number here">
        </div>
      </div>
      <div class="col-md-6">
        <label for="referenceSelector">How did you hear about us?</label>
        <%= select_tag 'referenceSelector', options_from_collection_for_select(@references, 'desc', 'desc'), prompt: 'Please select one of the options below:', class: 'custom-select' %>
      </div>
    </div>
    <div class="form-group">
      <h5>Video Conference Details</h5>
      <div class="form-check-inline">
        <input type="radio" id="videocallRadio1" name="videocallRadio" class="custom-control-input" value="Skype" checked>
        <label for="videocallRadio1">Skype</label>
      </div>
      <div class="form-check-inline">
        <input type="radio" id="videocallRadio2" name="videocallRadio" class="custom-control-input"  value="Google Hangout">
        <label for="videocallRadio2">Google Hangout</label>
      </div>
      <div class="form-check-inline">
        <input type="radio" id="videocallRadio3" name="videocallRadio" class="custom-control-input"  value="Facebook">
        <label for="videocallRadio3">Facebook</label>
      </div>
      <div class="row">
        <div class="col-md-12">
          <input type="text" class="form-control" id="clientVideocallId" aria-describedby="clientVideocallIdHelp" name="clientVideocallId" placeholder="Please enter your Caller ID here">
        </div>
      </div>
    </div>
    <div class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input" id="termsAndConditionsCheck" name="termsAndConditionsCheck" required>
      <label class="custom-control-label" for="termsAndConditionsCheck">
        I have read and agree with <a href="#" class="gradient textGradient" data-toggle="modal" data-target="#termsOfServicesModal">Terms and Conditions.</a>
      </label>
  </div>
  </form>
</div>
