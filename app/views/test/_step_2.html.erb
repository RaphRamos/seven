<div id="step-2" class="wizard-step-container">
  <form id="form-2">
    <div class="row mb-3">
    <div class="col-md-6">
      <div class="form-group">
        <label for="clientEmail">Email Address</label>
        <input type="email" class="form-control" id="clientEmail" name="clientEmail" placeholder="Please enter your email here">
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="clientName">Full Name</label>
        <input type="text" class="form-control" id="clientName" name="clientName" placeholder="Please enter your full name here">
      </div>
    </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-6">
        <div class="form-group">
          <label for="clientPhone">Phone Number</label>
          <input type="text" class="form-control" id="clientPhone" name="clientPhone" placeholder="Please enter your phone number here">
        </div>
      </div>
      <div class="col-md-6">
        <label for="referenceSelector">How did you hear from us?</label>
        <%= select_tag 'referenceSelector', options_from_collection_for_select(@references, 'desc', 'desc'), prompt: 'Please select one of the options below:', class: 'custom-select' %>
      </div>
    </div>
    <div class="form-group">
      <label for="clientVideocallId">Videocall ID</label>
      <input type="text" class="form-control" id="clientVideocallId" aria-describedby="clientVideocallIdHelp" name="clientVideocallId" placeholder="Skype ID, Google Hangout User, Facebook User, ...">
      <!-- <small id="clientVideocallIdHelp" class="form-text text-muted">(required if videocall service was selected)</small> -->
    </div>
    <div class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input" id="termsAndConditionsCheck" name="termsAndConditionsCheck" required>
      <label class="custom-control-label" for="termsAndConditionsCheck">
        I agree with <a href="#" class="gradient textGradient" data-toggle="modal" data-target="#termsOfServicesModal">Terms and Conditions.</a>
      </label>
  </div>
  </form>
</div>
